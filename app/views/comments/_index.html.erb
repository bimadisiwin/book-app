<table>
  <thead>
    <tr>
      <th><%= t('comment.comment') %></th>
      <th><%= t('comment.user') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% commentable.comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user.email %></td>
        <% if user_signed_in? && current_user.id == comment.user.id %>
          <td><%= link_to t('button.update'), edit_polymorphic_path([commentable, comment]) %></td>
          <td><%= link_to t('button.destroy'), polymorphic_path([commentable, comment]), method: :delete, data: { confirm: t('alert.verification') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
