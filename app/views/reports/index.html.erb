<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name('title') %></th>
      <th><%= Report.human_attribute_name('content') %></th>
      <th><%= Report.human_attribute_name('user') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= report.user.email %></td>
        <td><%= link_to t('button.show'), report %></td>
        <% if user_signed_in? && current_user.id == report.user.id %>
          <td><%= link_to t('button.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('button.destroy'), report, method: :delete, data: { confirm: t('alert.verification') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('report.new'), new_report_path %>
