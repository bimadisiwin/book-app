<h2><%= t('profile.edit')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('prdevise.registrations.edit.currently_waiting_confirmation_for_email')%> <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label t('profile.zip_code') %><br />
    <%= f.text_field :zip_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('profile.address') %><br />
    <%= f.text_area :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('profile.profile') %><br />
    <%= f.text_area :profile, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :password %> <i><%= t('profile.message') %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t('messages.characters') %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i><%= t('profile.message2') %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit t('button.update') %>
  </div>
<% end %>

<h3><%= t('profile.message3') %></h3>

<p><%= button_to t('button.cancel'), registration_path(resource_name), data: { confirm: t('devise.registrations.edit.are_you_sure') }, method: :delete %></p>

<%= link_to t('button.back'), :back %>
